                                    <Insets bottom="15" />
                                </VBox.margin>
                            </Label>

                            <!-- Mission Container -->
                            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="transparent-background" VBox.vgrow="ALWAYS">

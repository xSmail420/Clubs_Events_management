                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                        </padding>
                        <Label text="Â© 2025 UNICLUBS - Admin Dashboard v1.0" styleClass="footer-text" />
                    </HBox>

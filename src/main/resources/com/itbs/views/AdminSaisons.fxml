                                <padding>
                                    <Insets left="20.0" />
                                </padding>
                            </Button>

                            <Button fx:id="commentsManagementButton" onAction="#showCommentsManagement" styleClass="sidebar-button, submenu-button" text="Comments Management" maxWidth="Infinity" alignment="BASELINE_LEFT">
                                <graphic>
                                    <Label text="ðŸ’¬" />

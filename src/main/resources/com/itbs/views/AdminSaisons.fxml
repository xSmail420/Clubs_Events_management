    <!-- Main Content -->
    <BorderPane stylesheets="@../styles/uniclubs.css,@../styles/no-scrollbar.css,@../styles/saisons.css">
        <left>
            <!-- Sidebar Navigation -->
            <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0" styleClass="sidebar">
                <padding>
